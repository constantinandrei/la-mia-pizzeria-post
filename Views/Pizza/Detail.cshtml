@model Pizza

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Pizza Buona</h1>
        <h4>Miglior pizzeria del Mondo</h4>
        <a href="@Url.Action("Index")" class="text-end">Indietro</a>
        <div class="py-5"></div>

        @if(Model == null){
            <h4>Non esiste questa pizza</h4>
        } else {
            <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
                    <div class="col">
                        <div class="card">
                            <img src="@Model.Image.Remove(0, 1)" class="card-img-top"
                         alt="@Model.Name" />
                            <div class="card-body">
                                <h5 class="card-title">@Model.Name</h5>
                                <p class="card-text">
                                    @Model.Description
                                </p>
                                <p class="card-text">
                                    Prezzo: @Model.Price €
                                </p>
                            </div>
                        </div>
                    </div>
            </div>
        }
    </div>
</div>